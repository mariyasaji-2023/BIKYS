    <script>
        // Function to handle OTP resend
        function resendOtp() {
            // Perform an AJAX request to resend the OTP
            fetch('/resend-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({}),
            })
                .then(response => response.json())
                .then(data => {
                    // Handle the response
                    if (data.status === true) {
                        console.log('OTP resent successfully');
                        // You can add additional logic here, such as updating UI elements
                    } else {
                        console.error('Error resending OTP');
                        // Handle the error, display an alert, or update UI accordingly
                    }
                })
                .catch(error => {
                    console.error('Error in fetch:', error);
                });
        }
    
        // Function to show the "Resend OTP" button after 3 minutes
        function showResendButton() {
            document.getElementById('resendOtp').style.display = 'block';
        }
    
        // otp
        var timer;
        var Otptimer = document.getElementById('timer');
        var resendTimer = document.getElementById('resendOtp');
    
        function Otpstarttimer(minute, sec) {
            clearInterval(timer)
            timer = setInterval(() => {
                Otptimer.innerHTML = formatTime(minute) + ':' + formatTime(sec);
                if (minute == 0 && sec == 0) {
                    clearInterval(timer);
                    // Call the function to show the "Resend OTP" button
                    showResendButton();
                } else {
                    if (sec == 0) {
                        minute--;
                        sec = 59;
                    } else {
                        sec--;
                    }
                }
            }, 1000)
        }
    
        function formatTime(time) {
            return time < 10 ? '0' + time : time;
        }
        Otpstarttimer(1, 0);
    
        resendTimer.addEventListener('click', function () {
            Otpstarttimer(1, 0);
        });
    </script>

       
    <script>
        document.getElementById('resendOtp').addEventListener('click', function () {
            resendOtp();
        });
    </script>
